<?xml version="1.0" encoding="utf-8" ?>
<Grid 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MAUIEssentials.AppCode.Controls.RadioView"
    x:Name="radioView"
    ColumnSpacing="8"
    ColumnDefinitions="18, Auto">
    <Border
        x:Name="frame"
        Grid.Column="0"
        HeightRequest="18"
        WidthRequest="18"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Padding="0"
        BackgroundColor="Transparent">
         <Border.StrokeShape>
            <RoundRectangle CornerRadius="9" />
        </Border.StrokeShape>
        <BoxView
            x:Name="boxView"
            HeightRequest="12"
            WidthRequest="12"
            CornerRadius="6"
            HorizontalOptions="Center"
            VerticalOptions="Center" />
    </Border>
    <Label
        Grid.Column="1"
		Text="{Binding Text, Source={x:Reference radioView}}"
		TextColor="{Binding TextColor, Source={x:Reference radioView}}"
		FontSize="{Binding FontSize, Source={x:Reference radioView}}"
		FontFamily="{Binding FontFamily, Source={x:Reference radioView}}"
		FontAttributes="{Binding FontAttributes, Source={x:Reference radioView}}"
        VerticalTextAlignment="Center" />
</Grid>