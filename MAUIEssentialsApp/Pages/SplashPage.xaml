<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MAUIEssentialsApp.Pages.SplashPage"
    xmlns:controls="clr-namespace:MAUIEssentials.AppCode.Controls;assembly=MAUIEssentials"
    NavigationPage.HasBackButton="False"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
		<Grid
			x:Name="mainGrid"
			HorizontalOptions="Fill"
			VerticalOptions="Fill">
			<Grid.Background>
				<LinearGradientBrush
					EndPoint="0,1">
					<GradientStop
						Color="#FFF"
						Offset="0.1" />
					<GradientStop
						Color="#FFF"
						Offset="1.0" />
				</LinearGradientBrush>
			</Grid.Background>
			<controls:Image
				x:Name="imgSplash"
				Source="ic_splash"
				Aspect="AspectFit" />
			<ActivityIndicator
				x:Name="indicator"
				Margin="0,0,0,70"
				IsRunning="True"
				Style="{StaticResource commonIndicator}"
				HorizontalOptions="Center"
				VerticalOptions="End"
				HeightRequest="80"
				WidthRequest="80" />
		</Grid>
	</ContentPage.Content>
</ContentPage>