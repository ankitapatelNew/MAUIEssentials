<?xml version="1.0" encoding="utf-8" ?>
<pages:BaseContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MAUIEssentialsApp.Pages.LoginPage"
    xmlns:appResources="clr-namespace:MAUIEssentials.AppResources;assembly=MAUIEssentials"
    xmlns:controls="clr-namespace:MAUIEssentials.AppCode.Controls;assembly=MAUIEssentials"
    xmlns:pages="clr-namespace:MAUIEssentials.Pages;assembly=MAUIEssentials"
    xmlns:viewModel="clr-namespace:MAUIEssentialsApp.ViewModels"
    BackgroundColor="{Binding Source={x:Static appResources:AppColorResources.white}}">
    <pages:BaseContentPage.BindingContext>
        <viewModel:LoginViewModel
            x:Name="viewModel" />
    </pages:BaseContentPage.BindingContext>
    <pages:BaseContentPage.Content>
        <Grid
            Padding="20"
            RowSpacing="0"
            VerticalOptions="Fill"
            HorizontalOptions="Fill"
            RowDefinitions="Auto, *, Auto, *, Auto">
            <Label 
                Grid.Row="0"
                Text="{Binding Source={x:Static appResources:LocalizationResources.Welcome}}"
                TextColor="{Binding Source={x:Static appResources:AppColorResources.blueColor}}"
                FontSize="{StaticResource FontSize18}"
                HorizontalTextAlignment="Center" />
            <StackLayout
                Grid.Row="2"
                Spacing="10">
                <Grid
                    RowSpacing="0"
                    RowDefinitions="Auto, 1">
                    <Label
                        Margin="4,0,0,0"
                        Text="{Binding Source={x:Static appResources:LocalizationResources.email}}"
                        TextColor="{Binding Source={x:Static appResources:AppColorResources.grayColor}}"
                        FontSize="{StaticResource FontSize14}"
                        FontFamily="{StaticResource FontLight}"
                        VerticalTextAlignment="Center"
                        IsVisible="{Binding Email, Converter={StaticResource StringVisibilityConverter}}"/>
                    <controls:CommanEntry
                        Text="{Binding Email}"
                        Style="{StaticResource entryStyle}"
                        Keyboard="Email"
                        ReturnType="Next" />
                    <BoxView
                        Grid.Row="1"
                        Style="{StaticResource boxViewStyle}"
                        BackgroundColor="{Binding EmailBorderColor}" />
                </Grid>
                <StackLayout
                    Spacing="0"
                    Margin="0,10,0,0">
                    <Grid
                        ColumnSpacing="0"
                        ColumnDefinitions="*, Auto">
                        <Label
                            Grid.Column="0"
                            Margin="4,0,0,0"
                            Text="{Binding Source={x:Static appResources:LocalizationResources.password}}"
                            TextColor="{Binding Source={x:Static appResources:AppColorResources.grayColor}}"
                            FontSize="{StaticResource FontSize14}"
                            FontFamily="{StaticResource FontLight}"
                            VerticalTextAlignment="Center"
                            IsVisible="{Binding Password, Converter={StaticResource StringVisibilityConverter}}" />
                        <controls:CommanEntry
                            Grid.Column="0"
                            Text="{Binding Password}"
                            IsPassword="{Binding IsPasswordVisible, Converter={StaticResource BooleanInverter}}"
                            ReturnType="Done"
                            Style="{StaticResource entryStyle}" />
                        <controls:Image   
                            Grid.Column="0"
                            HeightRequest="24"
                            WidthRequest="24"
                            HorizontalOptions="End"
                            VerticalOptions="Start"
                            Source="{Binding VisibilityImage}"
                            TintColor="{Binding Source={x:Static appResources:AppColorResources.grayColor}}">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding PasswordVisibilityCommand}" />
                            </Image.GestureRecognizers>
                        </controls:Image>
                    </Grid>
                    <BoxView
                        Style="{StaticResource boxViewStyle}"
                        BackgroundColor="{Binding PasswordBorderColor}" />
                </StackLayout>
                <StackLayout
                    Grid.Row="4"
                    Spacing="15">
                    <controls:Button
                        Text="{Binding Source={x:Static appResources:LocalizationResources.login}}"
                        FontAttributes="Bold"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource buttonStyle}"
                        TextColor="{Binding LoginButtonTextColor}"
                        BackgroundColor="{Binding LoginButtonBgColor}" />
                </StackLayout>
            </StackLayout>
        </Grid>
    </pages:BaseContentPage.Content>
</pages:BaseContentPage>